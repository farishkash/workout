
<div class="container">
<div class="panel panel-info">
<div class="panel-heading"><h3>Workout Date: <%= @tracker.workout_date %></h3>
</div>
</div>

<% @cardio_exercises.each do |cardio_exercise| %>
<ul class="list-group">
<li class="list-group-item"><h4>Exercise Name: <%= cardio_exercise.cardio_exercise_name %></h4><%= link_to edit_tracker_cardio_exercise_path(cardio_exercise.tracker_id, cardio_exercise), class: 'edit', 'data-no-turbolink' => true do%><i class="fa fa-pencil-square-o left spacerright"></i><% end %><%= link_to tracker_cardio_exercise_path(cardio_exercise.tracker_id, cardio_exercise),  method: :delete, data: { confirm: 'Are you sure?', 'data-no-turbolink' => true} do%><i class="fa fa-times left red spacerleft"></i><% end %></li>
 <li class="list-group-item"><h5>Time In Minutes: <%= cardio_exercise.time_minutes %></h5></li>
  <li class="list-group-item"><h5>Calories Burned: <%= cardio_exercise.calories_burned %></h5></li>
 </ul>
  
  

<% end %>



<%= link_to 'Add Cardio Exercise', new_tracker_cardio_exercise_path(:tracker_id => @tracker.id),'data-no-turbolink' => true, class: 'btn btn-primary', remote: true  %>

<div id="cardio-form" class="topspacing" style="display:none;">
	
</div>
</div>


